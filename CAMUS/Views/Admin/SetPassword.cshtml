@model CAMUS.Models.User

@{
    ViewBag.Title = "修改密码";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<h2>修改密码</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">旧密码</label>
            <div class="col-md-10">
                <input type="password" class="form-control" name="oldPwd" datatype="*" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">新密码</label>
            <div class="col-md-10">
                <input type="password" class="form-control" name="newPwd" datatype="*" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">确认密码</label>
            <div class="col-md-10">
                <input type="password" class="form-control" name="newPwd2" datatype="*" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10 col-md-offset-2">
                <p style="color:#ff0000; font-size: 12px;">@ViewBag.Message</p>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存" class="btn btn-default" />
            </div>
        </div>
    </div>
}

@section Scripts{
<script src="~/Scripts/Validform_v5.3.2_min.js"></script>
}