@{
    ViewBag.Title = "联系我们";
}
<link href="~/Content/red.css" rel="stylesheet" />
<div class="entry-news-banner">
    <div class="container">
        <div class="entry-title">
            <h1>联系我们</h1>
        </div>
    </div>
</div>
<div class="container entry-contact-wrap">
    <div class="entry-dis-content">
        <h1>联系我们</h1>
    </div>
    <div class="container entry-contact-content">
        <div class="row">
            <div class="col col-4">
                <div class="entry-contact-way">
                    <p>
                        您可以通过以下联系方式联系我们，或者通过右侧表格给我们留下您的信息。<br /><br />
                        邮箱: <a href="mailto:Digitalmarketing@yuanliu-sh.com" target="_top" class="email">Digitalmarketing@yuanliu-sh.com</a><br />
                        热线电话: 4008-519-567
                    </p>
                    <p>
                        <a href=""><img src="~/images/joinuscn.jpg" /></a>
                    </p>
                </div>

            </div>
            <div class="col col-8">
                <form class="contact-form">
                    <div class="entry-radio row col-12">
                        <label>
                            <input type="radio" name="contact_type" value="1" checked/> 媒体
                        </label>
                        <label>
                            <input type="radio" name="contact_type" value="2" /> 酒商
                        </label>
                        <label>
                            <input type="radio" name="contact_type" value="3" /> 咨询
                        </label>
                    </div>
                    <div class="row-inner">
                        <div class="col col-6">
                            <div class="inputset">
                                <label>您的姓名*</label>
                                <input type="text" name="name" />
                            </div>
                            <div class="inputset">
                                <label>电话*</label>
                                <input type="text" name="tel" placeholder="+86" />
                            </div>
                            <div class="inputset">
                                <label>您的邮箱*</label>
                                <input type="text" name="mail" />
                            </div>
                        </div>
                        <div class="col col-6">
                            <div class="inputset">
                                <label>城市</label>
                                <input type="text" name="city" />
                            </div>
                            <div class="inputset">
                                <label>您的留言</label>
                                <textarea name="comment" class="resize-vertical"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="row-inner">
                        <div class="col col-12">
                            <div class="form-actions">
                                <input type="submit" id="edit-submit"/>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="container entry-office-content">
        <div class="entry-dis-content">
            <h1>我们的办公室</h1>
        </div>

        <div class="row">
            <div class="col col-3">
                <div class="office-item">
                    <img src="~/images/contactus01.jpg"  />
                    <div class="office-item-content">
                        <h3>上海总部</h3>
                        <p>上海市南京西路1376号东峰635,640室</p>
                    </div>
                </div>
            </div>
            <div class="col col-3">
                <div class="office-item">
                    <img src="~/images/contactus02.jpg" />
                    <div class="office-item-content">
                        <h3>北京办公室</h3>
                        <p>北京市朝阳区工体北路甲6号6层0602室</p>
                    </div>
                </div>
            </div>

            <div class="col col-3">
                <div class="office-item">
                    <img src="~/images/contactus03.jpg" />
                    <div class="office-item-content">
                        <h3>深圳办公室</h3>
                        <p>深圳市福田区新洲路深圳国际商会大厦B座910-911室Room</p>
                    </div>
                </div>
            </div>
            <div class="col col-3">
                <div class="office-item">
                    <img src="~/images/contactus04.jpg" />
                    <div class="office-item-content">
                        <h3>广州办公室</h3>
                        <p>广州市天河区华夏路30号富力盈通大厦3409室</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
<script src="~/Scripts/icheck.min.js"></script>
    <script>
        $(function () {
            $('input[type=radio]').iCheck({
                checkboxClass: 'icheckbox_minimal-red',
                radioClass: 'iradio_minimal-red',
                increaseArea: '20%' // optional
            });
        })
    </script>
}
